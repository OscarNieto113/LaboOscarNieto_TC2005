    <div class="row">
      <h2>Mistborn: </h2>
    <% if (mistborn.length > 0) { %>
        <% for (let mistborn1 of mistborn) { %>
            <div class="col l3 m4 s12">
                <div class="card">
                    <div class="card-image waves-effect waves-block waves-light">
